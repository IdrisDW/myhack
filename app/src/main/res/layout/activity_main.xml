<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Status text -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <!-- Simulation / Bluetooth toggle -->
    <Button
        android:id="@+id/toggleSimButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toggle Simulation/Bluetooth" />

    <!-- Foot map / Graph toggle -->
    <Button
        android:id="@+id/btnToggleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch to Graph"
        android:layout_marginTop="8dp" />

    <!-- Export CSV -->
    <Button
        android:id="@+id/btnExportCsv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Export CSV"
        android:layout_marginTop="8dp" />

    <!-- Foot heat map -->
    <com.example.myhack.uiApp.FootHeatMapView
        android:id="@+id/footHeatMapView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="8dp" />

    <!-- Sensor graph -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/sensorChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

</LinearLayout>
